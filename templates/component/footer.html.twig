<footer class="main-footer">
    <div class="bg-black footer">
        <div class="container py-1">
            <div class="row">
                <div class="col-sm-4">
                    <section>
                        <div><b>{{ 'Phone'|trans }}</b>: <span class="phone-number">{{ "show"|trans }}</span></div>
                        <div><b>Email</b>: <a href="mailto:{{ email }}">{{ email }}</a></div>
                        <div><b>{{ 'Address'|trans }}</b>: {{ address }}</div>
                    </section>
                </div>
                <div class="col-sm-4">
                    <section>
                        <div class="fw-bolder ">Menu:</div>
                        {% for menu in frontendManager.menu %}
                            <a href="{{ menu.url }}">{{ menu.name }}</a> -
                        {% endfor %}
                        <a target="_blank" href="{{ github }}">github</a> -
                        <a target="_blank"
                           href="{{ asset(app.request.locale == "pl" ? "upload/CV_PL.pdf" : "upload/CV_EN.pdf") }}">CV</a>
                    </section>
                </div>
                <div class="col-sm-4 icons d-flex justify-content-end">
                    <a class="icon" href="{{ url("homepage") }}">
                        <i class="fa fa-home"></i>
                    </a>
                    <a class="icon" target="_blank" href="{{ github }}">
                        <i class="fa fa-github"></i>
                    </a>
                    <a class="icon" target="_blank" href="{{ linkedin }}">
                        <i class="fa fa-linkedin-square"></i>
                    </a>
                    <a class="icon">
                        <i class="fa fa-chevron-up" id="scroll_up"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="container text-center site py-1">
            {{ 'mgorski.dev'|upper }} - {{ "now"|date('Y') }}
        </div>
    </div>
</footer>
